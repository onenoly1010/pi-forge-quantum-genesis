{
  "compilerOptions": {
    "outDir": "public",
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ES2020"],
    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "api/**/*.ts", "guardian-alerts.ts"],
  "exclude": ["node_modules"]
}
