            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "group": "quantum-operations"
            }
        },
        {
            "label": "üßπ Clean Python Cache",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-Command",
                "Get-ChildItem -Recurse -Force __pycache__ | Remove-Item -Force -Recurse; Get-ChildItem -Recurse -Force *.pyc | Remove-Item -Force"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
