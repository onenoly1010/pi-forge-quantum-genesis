# Sacred Trinity Quantum Resonance Lattice - Environment Configuration

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# =============================================================================
# JWT CONFIGURATION (Required)
# =============================================================================
# Generate a secure random string for JWT signing
JWT_SECRET=your-secure-random-string-here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# SERVICE PORTS (Optional - defaults provided in docker-compose.yml)
# =============================================================================
FASTAPI_PORT=8000
FLASK_PORT=5000
GRADIO_PORT=7860
OTLP_PORT=4318

# =============================================================================
# DATABASE CONFIGURATION (Optional - for advanced features)
# =============================================================================
# PostgreSQL settings (used by optional postgres service)
POSTGRES_HOST=postgres
POSTGRES_DB=quantum_lattice
POSTGRES_USER=developer
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# Redis settings (used by optional redis service)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# TRACING CONFIGURATION
# =============================================================================
# OpenTelemetry settings
OTLP_ENDPOINT=http://otel-collector:4318
OTLP_SERVICE_NAME=quantum-resonance-lattice
OTLP_SERVICE_VERSION=1.0.0

# Tracing sample rate (0.0 to 1.0)
TRACE_SAMPLE_RATE=1.0

# Azure AI SDK Configuration (Optional - for enhanced tracing)
AZURE_TRACING_GEN_AI_CONTENT_RECORDING_ENABLED=true
AZURE_SDK_TRACING_IMPLEMENTATION=opentelemetry
AZURE_TRACING_GEN_AI_INCLUDE_BINARY_DATA=true

# Quantum Tracing Configuration
QUANTUM_TRACING_ENABLED=true
CONSCIOUSNESS_STREAMING_TRACES=true
SACRED_TRINITY_OBSERVABILITY=full

# =============================================================================
# PI NETWORK MAINNET CONFIGURATION
# =============================================================================
# Pi Network SDK settings (for payment integration)
PI_NETWORK_MODE=mainnet
PI_NETWORK_APP_ID=your-pi-app-id
PI_NETWORK_API_KEY=your-pi-api-key
PI_NETWORK_API_ENDPOINT=https://api.minepi.com
PI_SANDBOX_MODE=false

# =============================================================================
# EXTERNAL API KEYS (Optional)
# =============================================================================
# Add any additional API keys your application needs
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:7860

# Session settings
SESSION_SECRET=another-secure-random-string
SESSION_TIMEOUT=3600

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log format (json or text)
LOG_FORMAT=text

# Enable structured logging
STRUCTURED_LOGGING=false

# Metrics collection
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable experimental features
ENABLE_WEBSOCKETS=true
ENABLE_TRACING=true
ENABLE_METRICS=true
ENABLE_CACHING=false

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Railway deployment (automatically set)
PORT=8000

# Docker settings
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Development/Production Mode
NODE_ENV=production