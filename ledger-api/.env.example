# Pi Forge Quantum Genesis - Ledger API Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string for production
DATABASE_URL=postgresql://user:password@localhost:5432/ledger_db

# SQLite for local development (comment out DATABASE_URL above and use this)
# DATABASE_URL=sqlite:///./ledger.db

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT secret for Guardian authentication (must be at least 32 characters)
GUARDIAN_JWT_SECRET=your-secure-guardian-jwt-secret-key-min-32-chars

# JWT settings
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, testnet, production
APP_ENVIRONMENT=testnet

# API versioning
API_VERSION=v1

# Service configuration
SERVICE_NAME=ledger-api
SERVICE_PORT=8001

# =============================================================================
# BLOCKCHAIN & ON-CHAIN SETTINGS
# =============================================================================
# CRITICAL: Must be 0 for testnet-only safety
NFT_MINT_VALUE=0

# Pi Network settings (stubs for future implementation)
PI_NETWORK_API_URL=https://api.minepi.com
PI_NETWORK_WALLET_ADDRESS=

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
RELOAD=false
