# =============================================================================
# HEPHAESTUS GUARDIAN COORDINATOR - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
# Full PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/guardian_db

# Or use Supabase (recommended)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-or-service-key

# =============================================================================
# DISCORD BOT CONFIGURATION (Required)
# =============================================================================
# Get your bot token from Discord Developer Portal
# https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# The Discord channel ID where guardian commands are allowed
# Right-click channel in Discord > Copy ID (requires Developer Mode enabled)
DISCORD_GUARDIAN_CHANNEL_ID=1234567890123456789

# Optional: Guild (server) ID for slash command registration
DISCORD_GUILD_ID=1234567890123456789

# =============================================================================
# GUARDIAN SECURITY (Required)
# =============================================================================
# JWT secret for signing tokens - generate with: openssl rand -hex 32
GUARDIAN_JWT_SECRET=your-secure-random-string-minimum-32-characters-long

# Quorum requirement (number of votes needed to approve)
GUARDIAN_QUORUM_REQUIRED=3

# Total number of guardians in the system
GUARDIAN_TOTAL_COUNT=5

# =============================================================================
# PI NETWORK INTEGRATION (Optional - for testnet)
# =============================================================================
# Pi Network testnet API key
PI_TESTNET_API_KEY=your-pi-testnet-api-key

# Pi Network mode: testnet or mainnet (ALWAYS use testnet for development)
PI_NETWORK_MODE=testnet

# Pi Network API endpoint
PI_NETWORK_API_ENDPOINT=https://api.testnet.minepi.com

# =============================================================================
# API CONFIGURATION (Optional - defaults provided)
# =============================================================================
# FastAPI server configuration
API_HOST=0.0.0.0
API_PORT=8001

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8001

# =============================================================================
# DEVELOPMENT SETTINGS (Optional)
# =============================================================================
# Environment mode
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DOCKER CONFIGURATION (Optional)
# =============================================================================
# PostgreSQL settings for docker-compose
POSTGRES_USER=guardian_admin
POSTGRES_PASSWORD=guardian_password_change_me
POSTGRES_DB=guardian_db
POSTGRES_PORT=5433

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. NEVER commit this file with real credentials
# 2. Use strong, randomly generated secrets for production
# 3. Rotate secrets regularly
# 4. Use different credentials for dev/staging/production
# 5. Store production secrets in Railway/Supabase secret management
# 6. All blockchain operations should use testnet in development
