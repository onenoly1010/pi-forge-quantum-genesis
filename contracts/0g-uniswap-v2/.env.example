# =============================================================================
# 0G ARISTOTLE MAINNET DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployer private key (DO NOT COMMIT ACTUAL KEY!)
PRIVATE_KEY=

# Deployer address (for verification)
DEPLOYER=

# Fee recipient address (initially deployer, later multisig recommended)
FEE_TO_SETTER=

# 0G Aristotle Mainnet RPC
RPC_URL=https://evmrpc.0g.ai

# Chain ID for 0G Aristotle
CHAIN_ID=16661

# Block explorer API key (optional, for contract verification)
ETHERSCAN_API_KEY=

# =============================================================================
# DEPLOYMENT OUTPUTS (Generated automatically by deploy script)
# =============================================================================
# These will be written to .env.launch after deployment

# W0G_ADDRESS=
# FACTORY_ADDRESS=
# ROUTER_ADDRESS=
# PAIR_INIT_CODE_HASH=

# =============================================================================
# SAFETY THRESHOLDS
# =============================================================================

# Minimum balance required for deployment (in 0G)
MIN_BALANCE=0.5

# Maximum acceptable gas price (in gwei)
MAX_GAS_PRICE=100

# =============================================================================
# VERIFICATION FLAGS
# =============================================================================

# Enable contract verification on Chainscan
VERIFY=true

# Use legacy transactions (EIP-1559 may not be supported)
USE_LEGACY=true
